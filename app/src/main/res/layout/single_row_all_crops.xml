<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_3sdp"
    android:layout_margin="@dimen/_10sdp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/single_all_crops_btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_8sdp"
            android:drawableEnd="@drawable/ic_delete"
            android:drawableTint="@color/green_light" />

        <ImageView
            android:id="@+id/single_all_crops_cropsImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/single_all_crops_btnDelete"
            android:src="@drawable/ic_crop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/single_all_crops_cropsImage"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/green_light"
            android:padding="@dimen/_10sdp"
            android:weightSum="2">

            <TextView
                android:id="@+id/single_all_crops_cropNameEng"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textSize="@dimen/_12sdp"
                android:textAlignment="textStart"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/single_all_crops_cropNameSin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/app_nameSin"
                android:fontFamily="@font/sarang_sattar_font"
                android:textColor="@color/white" />
        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>